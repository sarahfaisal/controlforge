{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://truststack.ai/schemas/controls.json",
  "type": "object",
  "required": [
    "controls"
  ],
  "properties": {
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "objective",
          "severity",
          "applicability"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "canonical_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "objective": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "category": {
            "type": "string"
          },
          "applicability": {
            "type": "object"
          },
          "why": {
            "type": "string"
          },
          "evidence_required": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "test_procedures": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "references": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "suggestions": {
            "type": "array",
            "items": {
              "type": "object"
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}