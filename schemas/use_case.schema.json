{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://truststack.ai/schemas/use_case.json",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "tags",
    "scope_questions"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9\\-]*$"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "scope_questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "prompt",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+$"
          },
          "prompt": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "boolean",
              "string",
              "number",
              "select",
              "multiselect"
            ]
          },
          "options": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "default": {}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}